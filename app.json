{
  "expo": {
    "name": "Group 1 Task Management",
    "slug": "group1-task-management",
    "version": "1.0.0",
    "orientation": "portrait",
    "icon": "./assets/icon.png",
    "userInterfaceStyle": "light",
    "scheme": "group1taskmanagement",
    "splash": {
      "image": "./assets/splash.png",
      "resizeMode": "contain",
      "backgroundColor": "#EDE6FF"
    },
    "ios": {
      "supportsTablet": true,
      "bundleIdentifier": "com.group1.taskmanagement"
    },
    "android": {
      "adaptiveIcon": {
        "foregroundImage": "./assets/adaptive-icon.png",
        "backgroundColor": "#EDE6FF"
      },
      "package": "com.group1.taskmanagement",
      "permissions": [
        "READ_EXTERNAL_STORAGE",
        "WRITE_EXTERNAL_STORAGE",
        "READ_MEDIA_IMAGES",
        "READ_MEDIA_VIDEO",
        "RECORD_AUDIO"
      ]
    },
    "web": {
      "favicon": "./assets/favicon.png",
      "bundler": "metro"
    },
    "plugins": [
      "expo-router",
      "expo-asset",
      "expo-font",
      [
        "expo-image-picker",
        {
          "photosPermission": "The app accesses your photos to let you share them with your profile."
        }
      ],
      [
        "expo-av",
        {
          "microphonePermission": "The app needs access to your microphone to record voice journals for your memories."
        }
      ],
      [
        "expo-media-library",
        {
          "photosPermission": "The app needs access to your photos to save images to your gallery.",
          "savePhotosPermission": "The app needs permission to save photos to your gallery.",
          "isAccessMediaLocationEnabled": false,
          "audioPermission": "The app needs access to audio files for media library operations."
        }
      ]
    ],
    "experiments": {
      "typedRoutes": true
    }
  }
}
